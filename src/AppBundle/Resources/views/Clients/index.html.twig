{% extends 'base.html.twig' %}

{% block body %}

  <div class="row">
    <div class="medium-12 large-12 columns">
      <h4>Гости</h4>
      <div class="medium-2  columns"><a class="button" href="{{ path('guest_add') }}">ДОБАВИТЬ ГОСТЯ</a></div>

      <table class="stack">
        <thead>
        <tr>
          <th width="200">ИМЯ</th>
          <th width="200">Email</th>
          <th width="200">Действие</th>
        </tr>
        </thead>
        {% for client in clients  %}
          <tr class="client">
            <td> {{ client.title | capitalize }} {{ client.name }} {{ client.lastName }} </td>
            <td>{{ client.email }}</td>
            <td>
              <a class="hollow button" href="{{ path('clients_edit_index', {'id_client':  client.id  } ) }}">РЕДАКТИРОВАТЬ</a>
              <a class="hollow button warning" href="{{ path("booking", {'id_client':  client.id  }) }}">БРОНИРОВАТЬ НОМЕР</a>
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>

{% endblock %}
